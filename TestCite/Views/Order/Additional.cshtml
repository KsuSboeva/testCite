@model List<TestCite.Models.DynamicValue>

@{
                /**/

                ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<style>
    .t{
        margin-bottom:20px;
    }
    .t2{
        padding-top:6px;

    }
</style>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    for (int i = 0; i < Model.Count; i++)
    {
        @Html.HiddenFor(m => m[i].Id)

        <div class="form-group">
            <b><div class="control-label col-md-2 t t2">@Html.DisplayFor(m => m[i].settingName)</div></b>
            
            <div class="col-md-10">
                @Html.EditorFor(m => m[i].dynamicValue, new { htmlAttributes = new { @class = "form-control t" } })
                @Html.ValidationMessageFor(m => m[i].dynamicValue, "", new { @class = "text-danger" })
            </div>
        </div>
       
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
