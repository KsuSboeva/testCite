@model TestCite.ViewModels.InstructorIndexData

@{
    ViewBag.Title = "Templates";
}

<h2>Templates</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Template Id</th>
        <th>Name</th>
        <th>Description</th>
        <th class ="col-md-1" >Attributes</th>
        <th class ="col-md-3"></th>
    </tr>

    @foreach (var item in Model.Templates)
    {
        string selectedRow = "";
        if (item.Id == ViewBag.TemplateID)
        {
            selectedRow = "success";
        }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.TemplateId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            
            <td>
                @{
                    foreach (var setting in item.Settings)
                    {
                          @setting.Name <br />
                    }
                }
            </td>

            <td>
                @Html.ActionLink("Select", "Index", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@if (Model.Settings != null)
{
    <h3>Attributes Taught by Selected Template</h3>
    <table class="table">
        <tr>
            
            <th>Number</th>
            <th>Title</th>
            <th>DefaultValue</th>
            
        </tr>

        @foreach (var item in Model.Settings)
        {
            string selectedRow = "";
            if (item.Id == ViewBag.SettingID)
            {
                selectedRow = "success";
            }
        <tr class="@selectedRow">
            
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.DefaultValue
            </td>

        </tr>
        }

    </table>
}

